<div class="container px5 px-sm-0">
  <h2>グループ一覧</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>グループ一覧</th>
        <th>説明</th>
        <th>人数</th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td>
            <%= link_to group.name, admin_group_path(group.id) %>
          </td>
          <td>
            <%= group.description %>
          </td>
          <td>
            <%= "#{group.users.count} 人"  %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>