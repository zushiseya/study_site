<div class="container px-5 px-sm-0">
  <h2>Users</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= image_tag user.get_profile_image, size: "100x100" %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= link_to "Show",user_path(user.id) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div> 

