<h2>User info</h2>
<%= image_tag @user.get_profile_image(100,100) %>
<table class = "table">
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
  </tbody>
</table>
<%= link_to  "プロフィール編集", edit_user_path(@user) %>

<h2>Posts</h2>
<table class = "table table-hover table-inverse">
  <thead>
    <tr>
      <th>タイトル</th>
      <th>説明</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td>
        <%= link_to user_path(post.user) do %>
          <%= post.title %>
        <% end %>
      </td>
      <td>
        <%= post.text %>
      </td>
      <td>
        <%= image_tag post.get_image(80,80) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>