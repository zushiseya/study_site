<div class="container px-5 px-sm-0">
  <h2>Posts</h2>
  <table class = "table table-hover table-inverse">
    <thead>
      <tr>
        <th>タイトル</th>
        <th>説明</th>
        <th>コメント数</th>
        <th>いいね数</th>
        <th>画像</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td>
          <%= link_to post_path(post) do %>
            <%= post.title %>
          <% end %>
        </td>
        <td>
          <%= post.text %>
        </td>
        <td>
          <%= "#{post.post_comments.count} コメント" %>
        </td>
        <td>
           ♥<%= post.favorites.count %> いいね
        </td>
        <td>
          <%= image_tag post.get_image, size: "100x100" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>