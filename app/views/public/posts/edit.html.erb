<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>編集画面</h2>
      
      <% if @post.errors.any? %>
        <div id="error_explanation" class="mb-3">
          <h3><%= @post.errors.count %> 件のエラーが発生しました:</h3>
          <ul>
            <% @post.errors.full_messages.each do |messages| %>
            <li><%= messages %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @post do |f| %>
        <div class="mb-3">
          <%= f.label :title, "タイトル", class: "form-label"%>
          <%= f.text_field :title, autofocus: true, id: "inputTitle", class: "form-control", placeholder: "タイトルを入力" %>
        </div>
        <div class="mb-3">
          <%= f.label :text, "説明", class: "form-label" %>
          <%= f.text_area :text, class: "form-control",  placeholder: "説明を入力" %>
        </div>
        <div class="mb-3">
          <%= f.label :problem, "問題", class: "form-label" %>
          <%= f.text_area :problem, class: "form-control", placeholder: "問題を入力" %>
        </div>
        <div class="mb-3">
          <%= f.label :explanation , "解説", class: "form-label" %>
          <%= f.text_area :explanation, class: "form-control", placeholder: "解説を入力" %>
        </div>
        <div>画像</div>
        <%= f.file_field :image, accept: "image/*" %>
        <p></p>
        <div><%= f.submit '保存', class: "btn btn-primary" %></div>
      <% end %>
    </div>
  </div>
</div>
