<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>グループ作成画面</h2>
      
      <%= form_with model: @group do |f| %>
        <% if @group.errors.any? %>
          <div id="error_explanation" class="mb-3">
            <h3><%= @group.errors.count %> つのエラーが発生しました。</h3>
              <ul>
                <% @group.errors.full_messages.each do |message| %>
                  <li><%= message%></li>
                  <% end %>
              </ul>
          </div>
        <% end %>
      
        <div class="mb-3">
          <%= f.label :name, "グループ名", class: "form-label" %>
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>
      
        <div class="mb-3">
          <%= f.label :description, "説明", class: "form-label" %>
          <%= f.text_area :description, class: "form-control" %>
        </div>
      
        <div class="actions">
          <%= f.submit "作成する", class: "btn btn-primary" %>
        </div>
      <% end %>
      
      <%= link_to '戻る', groups_path, class: "btn btn-secondary mt-3" %>
    </div>
  </div>
</div>