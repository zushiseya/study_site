<div class="container px-5 px-sm-0">
  <h2>グループ一覧</h2>
  <table class="table table-hover table-bordered">
    <thead>
      <tr>
        <th>グループ名</th>
        <th>説明</th>
        <th>人数</th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr onclick= "window.location='<%= group_path(group.id) %>'" style="cursor: pointer;">
          <td>
            <%= group.name %>
          </td>
          <td>
            <%= group.description %>
          </td>
          <td>
            <%= "#{group.users.count} 人"  %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>  
  
  <% if user_signed_in? %>
    <%= link_to '作成', new_group_path, class: "btn btn-primary" %>
  <% end %>
</div>